{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest/globals": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "babelOptions": {
      "rootMode": "upward"
    }
  },
  "plugins": ["jest"],
  "extends": [
    "eslint:recommended",
    "prettier",
    "prettier/babel",
    "plugin:jest/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"],
        "paths": ["src/"],
        "moduleDirectory": ["node_modules/"]
      }
    }
  },
  "rules": {
    "no-console": 2,
    "no-unused-vars": ["error", { "varsIgnorePattern": "jsx" }]
  }
}
