{
  "hooks": {
    "prepublish": "npm test && npm run clean",
    "postpush": "dotenv release-it --no-npm --no-git --no-hooks --no-increment"
  },
  "increment": {
    "codependencies": true
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagMessage": "Release v${version}"
  }
}
