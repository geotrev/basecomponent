{
  "roots": ["<rootDir>"],
  "clearMocks": true,
  "restoreMocks": true,
  "verbose": true,
  "testMatch": ["<rootDir>/packages/*/src/__tests__/**/*.spec.js"],
  "testEnvironmentOptions": {
    "url": "http://localhost/"
  },
  "testEnvironment": "jsdom",
  "transform": {
    "\\.js$": "babel-jest"
  },
  "globals": {
    "BUILD_ENV": "development"
  },
  "moduleNameMapper": {
    "^@bulba/element$": "<rootDir>/packages/element/src",
    "^@bulba/jsx$": "<rootDir>/packages/jsx/src",
    "^@bulba/template$": "<rootDir>/packages/template/src",
    "^@bulba/utils$": "<rootDir>/packages/utils/src"
  }
}
