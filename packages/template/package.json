{
  "name": "rotom-template",
  "version": "0.1.0",
  "description": "Renders strings to HTML in Rotom elements",
  "main": "lib/template.cjs.js",
  "module": "lib/template.es.js",
  "browser": "dist/template.js",
  "type": "module",
  "scripts": {
    "test": "BABEL_ENV=test jest --passWithNoTests",
    "test:watch": "BABEL_ENV=test jest --passWithNoTests --watch",
    "build": "BABEL_ENV=build rollup -c node:rotom-build-bundle",
    "build:publish": "BABEL_ENV=publish rollup -c node:rotom-build-bundle",
    "watch": "BABEL_ENV=build rollup -c node:rotom-build-serve -w",
    "preversion": "npm test",
    "postversion": "npm run build:publish"
  },
  "dependencies": {
    "omdomdom": "^0.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "rotom-build-bundle": "^0.1.0",
    "rotom-build-serve": "^0.1.0",
    "babel-jest": "^26.6.3",
    "jest": "^26.6.3",
    "rollup": "^2.50.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "keywords": [
    "component",
    "web component",
    "html",
    "web",
    "rotom",
    "string",
    "render"
  ],
  "directories": {
    "dist": "dist",
    "lib": "lib",
    "src": "src"
  },
  "files": [
    "lib/*.{js,map}",
    "dist/*.{js,map}",
    "src/**/*.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "George Treviranus <geotrev@icloud.com>",
  "homepage": "https://github.com/geotrev/rotom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/rotom.git"
  },
  "bugs": {
    "url": "https://github.com/geotrev/rotom/issues"
  }
}
