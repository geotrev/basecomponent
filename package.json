{
  "name": "bulba",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "clean": "rm -rf packages/*/lib packages/*/dist",
    "build": "npm run clean && npm run build -ws",
    "watch:template": "npm run watch:template -w @bulba/element",
    "watch:cdn:template": "npm run watch:cdn:template -w @bulba/element",
    "watch:jsx": "npm run watch:jsx -w @bulba/element",
    "watch:cdn:jsx": "npm run watch:cdn:jsx -w @bulba/element",
    "release:dry": "npm test && npm run clean && npm run release:dry -ws",
    "release": "npm test && npm run clean && npm run release -ws",
    "pre:release": "npm test && npm run clean && npm run pre:release -ws",
    "pre:release:next": "npm test && npm run clean && npm run pre:release:next -ws",
    "prettier:check": "prettier --config .prettierrc.json --check",
    "prettier:write": "prettier --config .prettierrc.json --write",
    "eslint:check": "eslint -c .eslintrc.json"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/plugin-transform-react-jsx": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^3.0.1",
    "babel-jest": "^27.4.6",
    "commithelper": "^1.2.0",
    "dotenv-cli": "^4.1.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.7",
    "paopu": "^0.1.0",
    "prettier": "^2.5.1",
    "release-it": "^14.12.3",
    "rollup": "^2.64.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-unused": "^0.1.1"
  },
  "author": "George Treviranus <geowtrev@gmail.com>",
  "homepage": "https://github.com/geotrev/bulba#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/bulba.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geotrev/bulba/issues"
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier:check",
      "npm run eslint:check"
    ],
    "*.json": [
      "npm run prettier:write"
    ]
  },
  "commithelper": {
    "types": [
      "feat",
      "fix",
      "chore",
      "docs",
      "style",
      "refactor",
      "perf",
      "test"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
