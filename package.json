{
  "name": "basecomponent",
  "version": "0.0.1",
  "description": "A simple base class for using native web components",
  "main": "lib/basecomponent.cjs.js",
  "module": "lib/basecomponent.esm.js",
  "browser": "lib/basecomponent.iife.js",
  "scripts": {
    "start": "rollup -c rollup.config.demo.js -w",
    "build": "rm -rf lib && rollup -c",
    "build:publish": "rm -rf lib && NODE_ENV='publish' rollup -c",
    "lint": "npm run scss:lint && npm run js:lint",
    "js:lint": "eslint . --ext .js -c .eslintrc.js --ignore-path .eslintignore"
  },
  "author": "George Treviranus",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "rollup": "^1.32.0",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-postcss": "^2.1.1",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.2.0"
  }
}
