{
  "name": "upgraded-element",
  "version": "0.4.3",
  "description": "A simple base class for using native web components",
  "main": "lib/upgraded-element.cjs.js",
  "module": "lib/upgraded-element.es.js",
  "browser": "dist/upgraded-element.min.js",
  "type": "module",
  "scripts": {
    "test": "BABEL_ENV=test jest",
    "test:watch": "BABEL_ENV=test jest --watch",
    "watch": "rollup -c rollup.config.demo.js -w",
    "build": "BABEL_ENV=build rollup -c",
    "build:publish": "BABEL_ENV=publish rollup -c",
    "lint": "eslint . --ext .js -c .eslintrc.json --ignore-path .eslintignore",
    "git:update-origin": "git add . && git commit -m 'update metadata & cdn tags' && git push && git push --tags",
    "prepublishOnly": "paopu && npm run git:update-origin",
    "postversion": "npm run build:publish"
  },
  "homepage": "https://github.com/geotrev/upgraded-element",
  "author": "George Treviranus <hello@geotrev.com>",
  "license": "MIT",
  "dependencies": {
    "omdomdom": "^0.1.10"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^24.0.2",
    "jest": "^26.4.2",
    "paopu": "0.0.6",
    "prettier": "^2.1.2",
    "rollup": "^2.27.1",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-serve": "^1.0.4",
    "rollup-plugin-terser": "^7.0.2"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "keywords": [
    "javascript",
    "js",
    "frontend",
    "web",
    "components",
    "web components"
  ],
  "files": [
    "lib/*.{js,map}",
    "dist/*.{js,map}",
    "src/*.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/upgraded-element.git"
  },
  "bugs": {
    "url": "https://github.com/geotrev/upgraded-element/issues"
  }
}
