{
  "name": "rotom",
  "version": "0.8.0-alpha.3",
  "description": "A base class for using Web Components",
  "main": "lib/rotom.template.cjs.js",
  "module": "lib/rotom.template.esm.js",
  "browser": "dist/rotom.template.min.js",
  "exports": {
    ".": {
      "require": "./lib/rotom.template.cjs.js",
      "import": "./lib/rotom.template.esm.js"
    },
    "./jsx": {
      "require": "./lib/rotom.jsx.cjs.js",
      "import": "./lib/rotom.jsx.esm.js"
    }
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "rollup -c config/rollup.build.config.js",
    "watch:template": "ENTRY=template rollup -c config/rollup.serve.config.js -w",
    "watch:jsx": "ENTRY=jsx rollup -c config/rollup.serve.config.js -w",
    "format": "prettier --write '**/*.js'",
    "lint": "eslint . --ext .js -c .eslintrc.json --ignore-path .eslintignore",
    "git:update-origin": "git add . && git commit -m '[npm publish] update to $npm_package_version' && git push && git push --tags",
    "prepublishOnly": "paopu && npm run git:update-origin",
    "preversion": "npm test",
    "postversion": "rm -rf lib dist && npm run build"
  },
  "optionalDependencies": {
    "snabbdom": "^3.2.0",
    "omdomdom": "^0.2.3"
  },
  "dependencies": {
    "snabbdom-signature": "^0.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/plugin-transform-react-jsx": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@rollup/plugin-replace": "^3.0.1",
    "babel-jest": "^27.4.5",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.5",
    "paopu": "^0.0.6",
    "prettier": "^2.5.1",
    "rollup": "^2.62.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-unused": "^0.1.1"
  },
  "keywords": [
    "component",
    "web component",
    "html",
    "web",
    "rotom",
    "element",
    "snabbdom",
    "jsx"
  ],
  "directories": {
    "dist": "dist",
    "lib": "lib",
    "src": "src"
  },
  "files": [
    "lib/*.{js,map}",
    "dist/*.{js,map}",
    "src/**/*.js"
  ],
  "author": "George Treviranus <geotrev@icloud.com>",
  "homepage": "https://github.com/geotrev/rotom#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/rotom.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geotrev/rotom/issues"
  }
}
