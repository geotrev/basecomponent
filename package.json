{
  "name": "rotom",
  "author": "George Treviranus <geotrev@icloud.com>",
  "private": true,
  "scripts": {
    "purge-build": "rm -rf packages/*/lib packages/*/dist",
    "bootstrap": "lerna clean --yes && lerna bootstrap --hoist",
    "test": "lerna exec --parallel --ignore rotom-build-* -- npm run test",
    "build": "lerna exec --parallel --ignore rotom-build-* -- npm run build",
    "build:publish": "lerna exec --ignore rotom-build-* -- npm run build:publish",
    "format": "prettier --write '**/*.js'",
    "lint": "eslint . --ext .js -c .eslintrc.json --ignore-path .eslintignore",
    "git:update-origin": "git add . && git commit -m '[npm publish] update metadata & cdn tags' && git push && git push --tags",
    "prepublishOnly": "paopu && npm run git:update-origin"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/eslint-parser": "^7.14.4",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^24.0.2",
    "lerna": "^4.0.0",
    "paopu": "^0.0.6",
    "prettier": "^2.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/rotom.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geotrev/rotom/issues"
  },
  "homepage": "https://github.com/geotrev/rotom#readme"
}
