{
  "name": "upgraded-element",
  "version": "0.3.1",
  "description": "A simple base class for using native web components",
  "main": "lib/upgraded-element.cjs.js",
  "module": "lib/upgraded-element.es.js",
  "browser": "lib/upgraded-element.js",
  "type": "module",
  "scripts": {
    "watch": "rollup -c rollup.config.demo.js -w",
    "build": "BABEL_ENV=build rollup -c",
    "build:publish": "BABEL_ENV=publish rollup -c",
    "lint": "eslint . --ext .js -c .eslintrc.json --ignore-path .eslintignore",
    "prepublishOnly": "npm run build:publish && node build/integrity.js"
  },
  "homepage": "https://github.com/geotrev/upgraded-element",
  "author": "George Treviranus <hello@geotrev.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "jshashes": "^1.0.8",
    "prettier": "^2.0.5",
    "rollup": "^2.26.1",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-postcss": "^3.1.5",
    "rollup-plugin-serve": "^1.0.3",
    "rollup-plugin-terser": "^7.0.0"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "keywords": [
    "javascript",
    "js",
    "frontend",
    "web",
    "components",
    "web components"
  ],
  "files": [
    "lib/*.{js,map}",
    "dist/*.{js,map}",
    "src/*.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/upgraded-element.git"
  },
  "bugs": {
    "url": "https://github.com/geotrev/upgraded-element/issues"
  }
}
