{
  "name": "rotom",
  "version": "0.0.1",
  "description": "A simple base class for using native web components",
  "main": "lib/base-component.cjs.js",
  "module": "lib/base-component.esm.js",
  "browser": "lib/base-component.js",
  "scripts": {
    "start": "rollup -c rollup.config.demo.js -w",
    "build": "rm -rf lib && rollup -c",
    "build:publish": "rm -rf lib && NODE_ENV='publish' rollup -c",
    "lint": "eslint . --ext .js -c .eslintrc.js --ignore-path .eslintignore"
  },
  "homepage": "https://github.com/geotrev/rotom",
  "author": "George Treviranus",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "prettier": "^1.19.1",
    "rollup": "^1.32.0",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-postcss": "^2.1.1",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.2.0"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "keywords": [
    "javascript",
    "js",
    "frontend",
    "web",
    "components",
    "web components"
  ],
  "files": [
    "lib/**.{js,map}",
    "src/*.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/rotom.git"
  },
  "bugs": {
    "url": "https://github.com/geotrev/rotom/issues"
  }
}
