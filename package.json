{
  "name": "bulba",
  "version": "0.14.0-alpha.1",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "clean": "rm -rf packages/*/lib packages/*/dist",
    "build": "npm run clean && npm run build -ws",
    "watch:template": "ENTRY=template rollup -c rollup.serve.config.js -w",
    "watch:cdn:template": "CDN=true ENTRY=template rollup -c rollup.serve.config.js -w",
    "watch:jsx": "ENTRY=jsx rollup -c rollup.serve.config.js -w",
    "watch:cdn:jsx": "CDN=true ENTRY=jsx rollup -c rollup.serve.config.js -w",
    "prettier:check": "prettier --config .prettierrc.json --check",
    "prettier:write": "prettier --config .prettierrc.json --write",
    "eslint:check": "eslint -c .eslintrc.json",
    "release": "release-workspaces"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-transform-react-jsx": "^7.17.3",
    "@babel/preset-env": "^7.17.10",
    "@release-it/conventional-changelog": "^5.0.0",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "babel-jest": "^28.1.0",
    "commithelper": "^1.2.0",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "lint-staged": "^12.4.1",
    "paopu": "^0.1.0",
    "prettier": "^2.6.2",
    "release-workspaces": "^0.3.1",
    "rollup": "^2.73.0",
    "rollup-plugin-dev": "^2.0.4",
    "rollup-plugin-terser": "^7.0.2",
    "semver": "^7.3.7",
    "yargs": "^17.5.0"
  },
  "author": "George Treviranus <geowtrev@gmail.com>",
  "homepage": "https://github.com/geotrev/bulba#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/bulba.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geotrev/bulba/issues"
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier:check",
      "npm run eslint:check"
    ],
    "*.json": [
      "npm run prettier:write"
    ]
  },
  "commithelper": {
    "types": [
      "feat",
      "fix",
      "chore",
      "docs",
      "style",
      "refactor",
      "perf",
      "test"
    ]
  },
  "workspaces": [
    "packages/utils",
    "packages/jsx",
    "packages/template",
    "packages/element"
  ]
}
